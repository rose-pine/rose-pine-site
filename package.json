{
	"name": "rose-pine-site",
	"version": "0.0.0",
	"license": "MIT",
	"type": "module",
	"scripts": {
		"dev": "svelte-kit dev",
		"build": "svelte-kit build",
		"preview": "svelte-kit preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
		"prepare": "husky install",
		"test": "ava"
	},
	"dependencies": {
		"@rose-pine/palette": "^2.1.0",
		"has-match": "^1.0.3",
		"svelte-i18n": "^3.4.0"
	},
	"devDependencies": {
		"@rgossiaux/svelte-headlessui": "^1.0.0-beta.12",
		"@sveltejs/adapter-netlify": "^1.0.0-next.51",
		"@sveltejs/kit": "^1.0.0-next.302",
		"autoprefixer": "^10.4.4",
		"ava": "^4.1.0",
		"husky": "^7.0.4",
		"postcss": "^8.4.12",
		"prettier": "^2.6.2",
		"prettier-plugin-tailwindcss": "^0.1.8",
		"svelte": "^3.46.6",
		"svelte-check": "^2.5.0",
		"svelte-preprocess": "^4.10.5",
		"tailwindcss": "^3.0.23",
		"tslib": "^2.3.1",
		"typescript": "^4.6.3"
	},
	"prettier": {
		"semi": false,
		"singleQuote": true,
		"useTabs": true,
		"plugins": [
			"prettier-plugin-tailwindcss"
		]
	},
	"lint-staged": {
		"themes.json": "node scripts/format-themes.js",
		"*": "prettier --ignore-unknown --write --plugin-search-dir=. -u"
	}
}
